---
import type { Technology } from '@/types'

const technology: Technology = Astro.props.technology
---

<div class="flex flex-row gap-x-3 items-center">
  <technology.icon class="size-8" />
  <h3
    class={`text-headline-light dark:text-headline-dark border-b w-full ${technology.colors}`}
  >
    {technology.name}
  </h3>
</div>
