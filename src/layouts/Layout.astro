---
import { getLangFromUrl } from '../i18n/utils';
import ThemeHeadScript from '@/components/sections/Header/ThemeHeadScript.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;

const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ThemeHeadScript />
	</head>
	<body class="bg-background-light dark:bg-background-dark">
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@400;500;700&display=swap');

	@font-face {
		font-family: 'Quicksand';
		src: url('/fonts/Quicksand-Regular.woff2');
		font-style: normal;
		font-display: swap;
		font-weight: 400 ;
	}

	@font-face {
		font-family: 'Quicksand';
		src: url('/fonts/Quicksand-Bold.woff2');
		font-style: normal;
		font-display: swap;
		font-weight: 700 ;
	}

	@font-face {
		font-family: 'Quicksand';
		src: url('/fonts/Quicksand-Medium.woff2');
		font-style: normal;
		font-display: swap;
		font-weight: 500 ;
	}

	@font-face {
		font-family: 'Quicksand';
		src: url('/fonts/Quicksand-SemiBold.woff2');
		font-style: normal;
		font-display: swap;
		font-weight: 600 ;
	}

	* {
		font-family: 'Quicksand',serif ;
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html,body{
		height: max-content;
	}

	body{
		min-height: 100vh;
		overflow-x: hidden;
		background-size: cover;
	}
</style>
